
pipeline {
    agent any

    stages {
        stage('Pre-build') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build -t alpine:latest --target pre-build .'
            }
        }
        stage('Build') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build -t alpine:latest --target build .'
            }
        }
        stage('Test') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build -t alpine:latest --target test .'
            }
        }
        stage('Security') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build -t alpine:latest --target security .'
            }
        }
        stage('back-end') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build -t alpine:latest --target back-end .'
            }
        }
        stage('front-end') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build -t alpine:latest --target front-end .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build -t alpine:latest --target deploy .'
            }    
        }
        stage('Post') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build -t alpine:latest --target post .'
            }
        }                
    }
}
